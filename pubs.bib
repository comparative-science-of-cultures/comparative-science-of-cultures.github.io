  number	= {4},
  pages		= {19},
  title		= {The Brahmin, the Aryan, and the powers of the priestly
		  class : puzzles in the study of Indian religion},
  url		= {http://dx.doi.org/10.3390/rel11040181},
  volume	= {11},
